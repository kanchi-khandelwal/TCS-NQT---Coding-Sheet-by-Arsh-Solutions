#include<bits/stdc++.h>
using namespace std;


/*You are required to complete this function*/
void addFraction(int num1, int den1, int num2,int den2)
{
    int num=(num1*den2)+(num2*den1);
    int den=den1*den2;
    int common=__gcd(num, den);
    num=num/common;
    den=den/common;
    cout<<num<<"/"<<den<<endl;
 }
