

class Solution{
	public:
   	int find(int n){
   	    int sum=0;
   	    if(n==1)
   	    {
   	        return 1;
   	    }
   	    for(int num=1; num<n; num++)
   	    {
   	        sum=sum+num;
   	        if(sum==n)
   	        {
   	            return num;
   	        }
   	    }
   	    return -1;
   	}    
};
